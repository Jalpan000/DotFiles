    , allDesktops    = 	True
    , persistent     = 	True
    , commands       = 	[ Run UnsafeStdinReader
                        , Run Com "uname"   ["-r"] 	    "" 0
                        , Run MultiCpu      ["-t",          "<fn=2>\xf108</fn>  <total>%"
                                            , "-L",         "50"
                                            , "-H",         "85"
                                            , "--low",      "green"
                                            , "--normal",   "orange"
                                            , "--high",     "red"
                                            ] 50
                        , Run Memory        [ "--template", "<fn=2>\xf233</fn> <usedratio>%"
                                            , "--Low",      "40"      -- units: %
                                            , "--High",     "85"      -- units: %
                                            , "--low",      "green"
                                            , "--normal",   "gold"
                                            , "--high",     "red"
                                            ] 50
                        , Run DynNetwork    [ "-t",          "<fn=2>\xf0ab</fn> <rx>kb <fn=2>\xf0aa</fn> <tx>kb"] 10
                        , Run Brightness    [ "-t",         "<fn=2>\xf0eb</fn> <percent>%", "--", "-D", "intel_backlight" ] 3
                        , Run Volume 	      "default"     "Master"
                                            [ "-t",         "<status>", "--"
                                            , "--on",       ""
                                            , "--off",      "<fc=#7D877D>MUTE</fc>"
                                            , "-H",         "66"
                                            , "-L",         "33"
                                            , "-h",         "<fc=#dc322f><fn=2>\xf028</fn> <volume>%</fc>"
